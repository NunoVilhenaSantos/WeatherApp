        <HorizontalStackLayout
            Grid.Row="4"
            Margin="0"
            HorizontalOptions="FillAndExpand">

            <Grid Margin="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  Primeira linha  -->
                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Source="weather/weather_icons_70_sun_up.svg" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,0"
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="Time of Sunrise"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Label
                    x:Name="SunriseDateTime"
                    Grid.Row="0"
                    Grid.Column="2"
                    FontSize="Small"
                    Text="{Binding Sys.Sunrise, Converter={StaticResource LongToDatetimeConverter}}"
                    TextColor="Black"
                    VerticalOptions="Center" />

                <!--  Segunda linha  -->
                <Image
                    Grid.Row="1"
                    Grid.Column="0"
                    Source="weather/weather_icons_69_sun_down.svg" />
                <Label
                    x:Name="SunsetDateTime"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0"
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="Time of Sunset"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    FontSize="Small"
                    Text="{Binding Sys.Sunset, Converter={StaticResource LongToDatetimeConverter}}"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Grid>
        </HorizontalStackLayout>


        <HorizontalStackLayout
            Grid.Row="5"
            Margin="0"
            HorizontalOptions="FillAndExpand">

            <Grid ColumnSpacing="10" RowSpacing="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <HorizontalStackLayout
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    IsVisible="False">

                    <!--  TextColor="{StaticResource EntryStyle}"  -->
                    <Entry
                        x:Name="CityEntry"
                        BackgroundColor="{StaticResource EntryStyle}"
                        CharacterSpacing="4"
                        HorizontalTextAlignment="Center"
                        Placeholder="Type the name of city"
                        PlaceholderColor="{StaticResource EntryStyle}"
                        VerticalOptions="Center" />

                    <!--  Grid.Column="1"  -->
                    <Button
                        x:Name="GetWeatherButton"
                        BackgroundColor="{StaticResource EntryStyle}"
                        BorderColor="White"
                        BorderWidth="1"
                        Clicked="OnGetWeatherButtonClicked"
                        Text="Get Weather"
                        TextColor="{StaticResource EntryStyle}" />

                </HorizontalStackLayout>


                <HorizontalStackLayout
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">

                    <!--  TextColor="{StaticResource EntryStyle}"  -->
                    <Entry
                        x:Name="CityGeoCodingEntry"
                        BackgroundColor="{StaticResource EntryStyle}"
                        CharacterSpacing="4"
                        HorizontalTextAlignment="Center"
                        Placeholder="Type the name of city"
                        PlaceholderColor="{StaticResource EntryStyle}"
                        VerticalOptions="Center" />

                    <!--  Grid.Column="1"  -->
                    <Button
                        x:Name="GetCitiesGeoCodingButton"
                        BackgroundColor="{StaticResource EntryStyle}"
                        BorderColor="White"
                        BorderWidth="1"
                        Clicked="OnGetGeoCodingCitiesButtonClicked"
                        Text="Get Weather"
                        TextColor="{StaticResource EntryStyle}" />
                </HorizontalStackLayout>

            </Grid>

        </HorizontalStackLayout>


        <StackLayout
            Grid.Row="6"
            Margin="0,20"
            HorizontalOptions="StartAndExpand"
            Orientation="Horizontal">

            <!--  IsVisible="false"  -->
            <ListView
                x:Name="CityListView"
                BackgroundColor="White"
                HasUnevenRows="true"
                ItemSelected="OnCitySelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label
                                    FontAttributes="None"
                                    FontSize="Default"
                                    Text="{Binding Name}" />
                                <Label
                                    FontAttributes="None"
                                    FontSize="Small"
                                    Text=" - " />
                                <Label
                                    FontAttributes="Italic"
                                    FontSize="Default"
                                    Text="{Binding State}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text=" (" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Default"
                                    Text="{Binding Country}" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text=")" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>


    </Grid>

</ContentPage>