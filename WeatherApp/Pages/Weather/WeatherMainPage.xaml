                            HorizontalOptions="Center"
                            Text="{Binding Main.Pressure}"
                            TextColor="Black" />
                        <Label Grid.Row="2"
                            FontSize="Default"
                            HorizontalOptions="Center"
                            Text="Pressure"
                            TextColor="#7D7D7D" />
                    </StackLayout>
                </StackLayout>-->
                <Image Grid.Column="2" Source="pressure.png" />
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="10,10"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="{Binding Main.Pressure}"
                    TextColor="Black" />
                <Label
                    Grid.Row="2"
                    Grid.Column="2"
                    FontSize="Default"
                    HorizontalOptions="Center"
                    Text="Pressure"
                    TextColor="#7D7D7D" />

                <!--<StackLayout
                    Grid.Column="3"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Vertical"
                    Spacing="10">
                    <Image Source="cloudiness.png" />
                    <StackLayout HorizontalOptions="CenterAndExpand" Spacing="7">
                        <Label
                            Grid.Row="1" Margin="10,15"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="{Binding Clouds.All}"
                            TextColor="Black" />
                        <Label Grid.Row="2"
                            FontSize="Default"
                            HorizontalOptions="Center"
                            Text="Cloudiness"
                            TextColor="#7D7D7D" />
                    </StackLayout>
                </StackLayout>-->
                <Image Grid.Column="3" Source="cloudiness.png" />
                <Label
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="10,10"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="{Binding Clouds.All}"
                    TextColor="Black" />
                <Label
                    Grid.Row="2"
                    Grid.Column="3"
                    FontSize="Default"
                    HorizontalOptions="Center"
                    Text="Cloudiness"
                    TextColor="#7D7D7D" />

            </Grid>
        </Frame>


