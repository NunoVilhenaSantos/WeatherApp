                    Padding="10"
                    Clicked="OnCelsiusButtonClicked"
                    CornerRadius="20"
                    Text="ºC"
                    TextColor="White" />
                <Button
                    x:Name="ButtonFahrenheit"
                    Padding="10"
                    Clicked="OnFahrenheitButtonClicked"
                    CornerRadius="20"
                    Text="ºF"
                    TextColor="White" />
                <Button
                    x:Name="ButtonKelvin"
                    Padding="10"
                    Clicked="OnKelvinButtonClicked"
                    CornerRadius="20"
                    Text="ºK"
                    TextColor="White" />

            </StackLayout>
        </StackLayout>


        <StackLayout
            Grid.Row="1"
            Margin="0,0"
            HorizontalOptions="Start"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="Start">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="cityLatitude"
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="{Binding Coord.Lat, StringFormat='Latitude: {0:0}° {0:00}\' {0:00.0}\'\''}"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Label
                    x:Name="cityLongitude"
                    Grid.Row="1"
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="{Binding Coord.Lon, StringFormat='Longitude: {0:0}° {0:00}\' {0:00.0}\'\''}"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </StackLayout>


        <StackLayout
            Grid.Row="2"
            Margin="0,0"
            HorizontalOptions="Center"
            Orientation="Vertical"
            VerticalOptions="Center">
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <!--  Source="{Binding Weather[0].Icon, Converter={StaticResource StringToImageConverter}}"  -->
                <!--  Source="{Binding Weather[0].Icon}"  -->
                <Image
                    x:Name="weatherIcon"
                    HeightRequest="100"
                    Source="{Binding Weather[0].Icon, Converter={StaticResource StringToImageConverter}}"
                    VerticalOptions="Center"
                    WidthRequest="100" />
                <Label
                    x:Name="TemperatureLabel"
                    FontAttributes="Bold"
                    FontSize="70"
                    Text="{Binding Main.Temperature, Converter={StaticResource FahrenheitToCelsiusConverter}}"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Label
                    x:Name="CelsiusFahrenheitLabel"
                    FontSize="40"
                    Text="°C"
                    TextColor="White"
                    VerticalOptions="Center" />
            </StackLayout>
            <Label
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="{Binding Weather[0].Description}"
                TextColor="White" />
            <Label
                FontSize="Default"
                HorizontalOptions="Center"
                Text="{Binding Dt, Converter={StaticResource LongToDatetimeConverter}}"
                TextColor="White" />
        </StackLayout>


        <Frame
            Grid.Row="3"
            Margin="0,20,0,20"
            Padding="0"
            CornerRadius="10"
            HasShadow="True"
            HeightRequest="120"
            VerticalOptions="Start">

            <Grid
                Margin="0,0,0,0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--<StackLayout
                    HorizontalOptions="CenterAndExpand"
