                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Source="humidity.png" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,10"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="{Binding Main.Humidity}"
                    TextColor="Black" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    FontSize="Default"
                    HorizontalOptions="Center"
                    Text="Humidity"
                    TextColor="#7D7D7D" />


                <!--<StackLayout
                    Grid.Column="1"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Vertical"
                    Spacing="10">
                    <Image Source="wind.png" />
                    <StackLayout HorizontalOptions="CenterAndExpand" Spacing="7">
